<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="287.0" prefWidth="346.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controlador.MainControlador">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <HBox prefHeight="31.0" prefWidth="232.0">
      <children>
         <Label text="Nombre">
            <HBox.margin>
               <Insets right="5.5" top="5.0" />
            </HBox.margin>
         </Label>
         <TextField fx:id="tfName" prefHeight="26.0" prefWidth="150.0">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </TextField>
      </children>
      <VBox.margin>
         <Insets left="15.0" top="25.0" />
      </VBox.margin>
   </HBox>
   <HBox prefHeight="31.0" prefWidth="232.0">
      <children>
         <Label text="Contraseña">
            <HBox.margin>
               <Insets top="5.0" />
            </HBox.margin>
         </Label>
         <PasswordField fx:id="tfContrasenia">
            <HBox.margin>
               <Insets left="12.0" />
            </HBox.margin>
         </PasswordField>
      </children>
      <VBox.margin>
         <Insets left="13.0" />
      </VBox.margin>
   </HBox>
   <Button fx:id="btnConnect" defaultButton="true" mnemonicParsing="false" onAction="#registro" text="Conectarse">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin></Button>
   <Hyperlink fx:id="hpCrearCuenta" onAction="#crearCuenta" text="Crear cuenta">
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin>
   </Hyperlink>
   <Label fx:id="alert" text="Usuario o contraseña incorrectos" textFill="RED" visible="false">
      <VBox.margin>
         <Insets bottom="-15.0" top="-5.0" />
      </VBox.margin>
      <font>
         <Font name="Verdana" size="12.0" />
      </font>
   </Label>
</VBox>
